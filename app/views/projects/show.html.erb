<div class="container">
  <h2 class="text-center">Features</h2>

  <br />

  <div align="center">
    <%= link_to 'New Feature', new_feature_path(proj_id: @project.id) class: "btn btn-success btn-md" %>
  </div>

  <ul class="list-group">
    <% @project.features.each do |feat| %>
      <li class="list-group-item"><%= feat.name %></li>
    <% end %>
  </ul>
</div>
