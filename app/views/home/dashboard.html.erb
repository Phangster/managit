<div class="container">
  <h1 class="text-center">Hi: <%= @user.username %>!</h1>

  <%= link_to 'New Project', new_project_path, class: 'btn btn-success btn-md' %>

  <ul class="list-group">
    <% @projects.each do |proj| %>
      <%= link_to proj.title, project_path(proj), class: "list-group-item list-group-item-action" %>
    <% end %>
  </ul>
</div>
